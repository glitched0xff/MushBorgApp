  <script>
  let pickedElement= <%- JSON.stringify( pickedElement) %>
  let pickReasonDD=<%- JSON.stringify( pickReasonDD) %>
  let fromDate=<%-fromDate  %>
  let toDate=<%- toDate %>
  let totalDay=[]

  console.log(pickedElement)
  console.log(pickReasonDD)
  // Weight per day and total in period

    $(document).ready(async function () {
        console.log(fromDate,toDate)
        console.log(moment(fromDate).format("DD-MM"),moment(toDate).format("DD-MM"))

      $('#intervalData').daterangepicker({
          startDate: moment(fromDate).format("DD-MM"),
          endDate: moment(toDate).format("DD-MM"),
          locale: {
            format: 'DD/MM'
          }
        });

      $('#intervalData').on('apply.daterangepicker', function(ev, picker) {});

      $('#intervalData').on('apply.daterangepicker', function(ev, picker) {
        let fromDate=picker.startDate.format('YYYY-MM-DD')
        let toDate=picker.endDate.format('YYYY-MM-DD')
          window.location="/statistic/pickElementList?fromDate="+fromDate+"&toDate="+toDate
      });

      /** filter reason */
      $("#filterReasonDD").click(function (e) { 
        e.preventDefault();
        let val=$(this).val()
        let html=""
        let totResult=0
        pickedElement.forEach(elem => {
          if(val=="-1"){
            html+=`<tr>
                    <td scope="row"><a href="/mushelement/singleMushElement?elementCode=${ elem.element_code}" target="_blank">${elem.element_code }</a></td>
                    <td>${moment(elem.pick_date).format('DD/MM/YYYY') }</td>
                    <td>${elem.pick_reason_text }</td>
                  </tr>`
                  totResult++
          }else{
          if(elem.pick_reason==val){
            html+=`<tr>
                    <td scope="row"><a href="/mushelement/singleMushElement?elementCode=${ elem.element_code}" target="_blank">${elem.element_code }</a></td>
                    <td>${moment(elem.pick_date).format('DD/MM/YYYY') }</td>
                    <td>${elem.pick_reason_text }</td>
                  </tr>`
                  totResult++
          }}
        });
        $("#pickTable_Tbl").html(html)
        $("#totalReult_SPN").html(totResult)
      });
    });

  </script>
