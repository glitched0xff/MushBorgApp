  // Draw table Child element 
  function drawTableChild(data,table,fields,topic,title) {
      let html=""
      console.log(data.length)
      if (data.length>0){
        for (let i = 0; i < data.length; i++) {
          const elem = data[i];
          html+=`<tr>
          <td>
            <button type="button" name="" id="showChildBtn_${elem.id}" 
