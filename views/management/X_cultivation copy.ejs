    $("#saveNewCultivation_Btn").hide()
    $("#saveModCultivation_Btn").hide()
    $("#rowCultivationElement").hide()
  });  
  // Show/mod Raw material
  $(document).on("click",".showCultivation", async function(e){
      $("#saveCultivation_Btn").hide()
      let id=$(this).attr("idCultivation")
      idCultivation=id
      let cultivationName=$(this).attr("cultivationName")
      await $.ajax({
        type: "GET",
        url: "/cultivation/getOneCultivation?id="+id,
        success: async function (response) {
          console.log(response)
          let data=response.propagation
          // Populate GUI
          for (const [key, value] of Object.entries(data)) {
              if($("#"+key+"_Fld").attr("tp")=="textField"){
                $("#"+key+"_Fld").val(value)
              }
              if($("#"+key+"_Fld").attr("tp")=="selectField"){
                $("#"+key+"_Fld").val(value).change();
              }
              switch (key) {
                case "substrateId":
                  $("#substrateId_Show").html(data.substrate.name_substrate)
                  break;
                case "containerId":
                  $("#containerId_Show").html(data.container?data.container.container_name:"-")
                  break;     
                case "spawnId":
                  $("#spawnId_Show").html(data.spawn.code_spawn+" - "+ data.spawn.strain.strain_name)
                  break;
                default:
                  $("#"+key+"_Show").html(value?value:"-")
                  break;
                }
            }
            $("#id_Fld").val(data.id)
            await drawElementTable(data.propagationElements)
          if (response.propagation.used>0){
              $("#saveCultivation_Btn").hide()
              await drawTableCultivation()
              $("#rowCultivation").show()
              $("#addElement_Btn").prop("disabled","true")
              $(".delElement_Btn").prop("disabled","true")
            } else {
              $("#rowCultivation").hide()
              $("#addElement_Btn").removeAttr("disabled")
              $(".delElement_Btn").removeAttr("disabled")
            }
          $("#showCultivation_Crd").show()
          $("#tableCultivation_Crd").hide()
          $("#newCultivation_Btn").hide()
          $("#saveModCultivation_Btn").hide()
          $("#saveNewCultivation_Btn").hide()
          $("#modCultivation_Btn").show()
          $("#backToMain_Btn").show()
          $(".elementForm").hide()
          $(".elementText").show()
        }
      });   
    })
    $("#modCultivation_Btn").click(function (e) { 
      e.preventDefault();
      $("#saveModCultivation_Btn").show()
      $(".elementForm").show()
      $(".elementText").hide()
    }); 
     // --> Mod cultivation
   //YYYY-MM-DD hh:mm:ss
   $("#saveModCultivation_Btn").click(function (e) { 
    e.preventDefault();
    if (checkForm("cultivation_Form")){
    $.ajax({
        type: "PUT",
        url: "/cultivation/updateCultivation",
        data: $("#cultivation_Form").serialize(),   
        success: async function (response) {
          await drawTable()
          $("#showCultivation_Crd").hide()
          $("#tableCultivation_Crd").show()
          $("#newCultivation_Btn").show()
          $("#modCultivation_Btn").hide()
          $("#backToMain_Btn").hide()
          $("#saveNewCultivation_Btn").hide()
          $("#saveModCultivation_Btn").hide()
          $("#saveCultivation_Btn").show()
          $(".elementForm").hide()
          $(".elementText").show()
          resetForm("cultivation_Form")
        }
      });
      } else{
            alert("Assicurati di aver compilato i campi richiesti")
          }
